        <main>
          <%= yield %>
        </main>
      </section>
      <section class="<%= append_admin_style("container-app_footer") %>">
        <footer>
          Created by Christian Michael Dollosa & Andrea Pauline De Guzman. Â© 2021
        </footer>
      </section>
    </section>
  </body>
