<div class="card dashboard_balance">
  <div class="card-header bg-transparent balance_header">
        <span>Balance Details</span>
    <div class="button_holder">
        <%=link_to "Deposit", deposit_wallets_path, class:"btn btn-primary balance_btn"%>
        <%=link_to "Withdraw", withdraw_wallets_path, class:"btn btn-primary balance_btn"%>
    </div>
  </div>
  <div class="card-body balance_body">
    <div>
        <label class="card-text balance_label">Account Balance</label>
        <h5 class="card-title">$<%= balance %></h5>

        <label class="card-text balance_label">Total Deposits</label>
        <h5 class="card-title">$<%= deposits %></h5>

        <label class="card-text balance_label">Total Withdrawals</label>
        <h5 class="card-title">$<%= withdrawals %></h5>

        <label class="card-text balance_label">Unrealized Gains/Losses</label>
        <h5 class="card-title">$(100,000)</h5>
    </div>
    <div>
        Insert pie chart here @via chartsjs
    </div>
  </div>
</div>
