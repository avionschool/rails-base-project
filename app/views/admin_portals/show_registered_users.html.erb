<div class="col">
  <div class="text-center">
    <h2>Registered Users</h2>
  </div>

  <table class="table table-dark table-hover">
    
    <thead>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </thead>

    <tbody>
      <tr>
      <% @users.each do |user| %>
        <% if user.status == 'approved' %>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= link_to "View User", admins_view_path(id: user.id), method: 'get', class: "btn btn-success" %>
          <%= link_to "Edit User", edit_user_path(id: user.id), method: 'get', class: "btn btn-warning" %> </td>
      </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>



