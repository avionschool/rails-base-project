<br><br><br><br><br><br>
<div class="flex justify-center items-center">
  <%= form_with :class => "", model: @user, url: topup_money_path, locale: true do |f| %>
      <h1 class="text-3xl font-bold text-pink-700">Add Money</h1>
      <br>
    <div class="form-group">
      <%= f.label :Your_Balance %>
      <p class="form-control"><%= current_user.balance %></p>
    </div>

    <div class="form-group">
      <%= f.label :Amount %>
      <%= f.number_field :amount, placeholder: "0.00", :class => "form-control", required: true %>
    </div>
  <!--Footer-->
    <div class="form-group flex justify-between items-center">
      <%= link_to  trader_stock_path do %><button class="btn btn-light btn-lg">Back</button><% end %>
      <%= f.submit "Save", class: "btn btn-primary btn-lg"%>
    </div>
  <% end %>
</div>