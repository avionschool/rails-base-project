<div class="container">
  <h1>Update this service</h1>
  
<%= form_for @service do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  
  <div class="form-group">
    <%= form.label :category %>
     <%= form.select :category, [
      'Churches', 
      'Reception venues', 
      'Hotels',
      'Performers',
      'Hosts',
      'Photographers',
      'Videographers',
      "Men's clothing",
      "Women's clothing",
      'Vehicles',
      'Rings',
      'Florists',
      'Lights and sounds',
      'Catering',
      'Loot bags'
      ]
    %>
  </div>
  
  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <%= form.submit %>
<% end %>

</div>
<div>
  <%= link_to "Go back", @supplier %>
</div>
