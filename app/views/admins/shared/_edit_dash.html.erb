<main>

    <h1>Edit Trader Profile</h1>

    <div class="date">
        <h1><%= Time.now.strftime('%Y-%m-%d %H:%M:%S') %></h1>
    </div>

    <%# Insights %>

    <div class="insights trans-list">

        <%# Add Trader Form %>
        <div class="companies">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white">
                <path d="M19 8h-2v3h-3v2h3v3h2v-3h3v-2h-3zM4 8a3.91 3.91 0 0 0 4 4 3.91 3.91 0 0 0 4-4 3.91 3.91 0 0 0-4-4 3.91 3.91 0 0 0-4 4zm6 0a1.91 1.91 0 0 1-2 2 1.91 1.91 0 0 1-2-2 1.91 1.91 0 0 1 2-2 1.91 1.91 0 0 1 2 2zM4 18a3 3 0 0 1 3-3h2a3 3 0 0 1 3 3v1h2v-1a5 5 0 0 0-5-5H7a5 5 0 0 0-5 5v1h2z">
                </path>
            </svg>
            <div class="middle">
                <div class="left">
                    <h3>Edit Trader</h3><hr/>
                    <%= form_with scope: :user, url: trader_profile_path, method: :put  do |f| %>
                        <div class="field">
                            <%= f.email_field :email, autofocus: true, value: @user.email, placeholder: "✉️ Email" %><br/><br/>
                            <%= f.text_field :fullname, autofocus: true, value: @user.fullname, placeholder: "👤 Fullname" %><br/><br/>
                            <%= f.number_field :balance, autofocus: true, value: @user.wallet.balance , placeholder: "$ Balance" %> <br/><br/>
                        </div>
                        <div class="actions">
                            <%= f.button "Edit Trader", class: 'register-btn cr-trader' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>

    </div>

</main>

<%# Right %>

<div class="right">

    <%# Top %>

    <div class="top">
        <button id="menu-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"></path></svg>
