<div class="dashboard margin-left-none">
  <div class="columns mt-0">
    <div class="column is-full">
      <span class="is-size-4 has-text-weight-light">Welcome to </span>
      <span class="is-size-4 has-text-weight-bold green">Tradr Platform!</span>
      <br>
      <span class="has-text-grey-light has-text-weight-light is-size-5">Good Day, <%= !!current_user.name ? current_user.name : current_user.email %></span>
      
    </div>
  </div>
  <div class="columns mt-0">
    <div class="column is-two-thirds">
      <span class="has-text-weight-bold title is-4 mb-2">Your Portfolio</span>
      <%unless current_user.admin?%>
      <h1>Cash: <%= number_to_currency current_user.cash%></h1>
      <%end%>
      <div class="max-tile">
      <% @portfolio.each do |x| %>
        <div class="tiles mt-4 max-tile">
          <div class="tile">
            <h1><%= x[:name] %> [<%= x[:code] %>]</h1>
          </div>
          <div class='is-flex is-flex-direction-row is-justify-content-space-between is-align-items-center'>
            <div>
              <p>Volume: <%= x[:volume] %></p>
              <p>Price: <%= number_to_currency(x[:price]) %> </p>
              <p>Value: <%= number_to_currency(x[:volume] * x[:price]) %>
            </div>
             <div class='is-flex is-flex-direction-column is-align-items-center'>
                  <%= link_to transactions_new_path(:transaction_type => "Buy", :stock_id => x[:stock_id], :from_portfolio => true), class: 'button is-primary mr-2 mt-1 has-text-weight-medium' do%>
                    <i class='bx bx-archive-in mr-1' ></i> Buy
                  <% end %>
                  <%= link_to transactions_new_path(:transaction_type => "Sell", :stock_id => x[:stock_id], :from_portfolio => true, :volume => x[:volume]), class: 'button is-danger mr-2 mt-1 has-text-weight-medium' do%>
                    <i class='bx bx-archive-out mr-1' ></i> Sell
                  <% end %>
             </div>
          </div>
          </div>
        <% end %>
      </div>
      </div>
      <%= render "shared/trending" %>
    </div>
  </div>
