<main>
    
    <h1>Dashboard</h1>

    <div class="date">
        <h1><%= Time.now.strftime('%Y-%m-%d %H:%M:%S') %></h1>
    </div>

    <%# Insights %>

    <div class="insights">

        <%# Transactions Count %>
        <div class="trans">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: white;"><path d="M3 5v14c0 1.103.897 2 2 2h14c1.103 0 2-.897 2-2V5c0-1.103-.897-2-2-2H5c-1.103 0-2 .897-2 2zm16.001 14H5V5h14l.001 14z"></path><path d="M11 7h2v10h-2zm4 3h2v7h-2zm-8 2h2v5H7z"></path></svg>
            <div class="middle">
                <div class="left">
                    <h3>Total No. of Transactions</h3>
                    <h1><%= Transaction.count %></h1>
                </div>
            </div>
            <br/>
            <small class="text-muted">Last 24 Hours</small>
        </div>

        <%# Traders Count %>
        <div class="traders">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: white;"><path d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z"></path></svg>
            <div class="middle">
                <div class="left">
                    <h3>Total No. of Traders</h3>
                    <h1><%= User.count %></h1>
                </div>
            </div>
            <br/>
            <small class="text-muted">Last 24 Hours</small>
        </div>

        <%# Companies Count %>
        <div class="companies">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: white;"><path d="M7 14.001h2v2H7z"></path><path d="M19 2h-8a2 2 0 0 0-2 2v6H5c-1.103 0-2 .897-2 2v9a1 1 0 0 0 1 1h16a1 1 0 0 0 1-1V4a2 2 0 0 0-2-2zM5 20v-8h6v8H5zm9-12h-2V6h2v2zm4 8h-2v-2h2v2zm0-4h-2v-2h2v2zm0-4h-2V6h2v2z"></path></svg>
            <div class="middle">
                <div class="left">
                    <h3>Total No. of Companies</h3>
                    <h1><%= Market.count %></h1>
                </div>
            </div>
            <br/>
            <small class="text-muted">Last 24 Hours</small>
        </div>

    </div>

    <%# Traders List %>

    <div class="traders-list">
        <h2>Trader's List</h2>
        <% if @users.empty? %>
            <h2>No Approved Traders Yet</h2>
        <% else %>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Fullname</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <% @users.each do |user| %>
                                <%= user.id %><hr>
                            <% end %>
                        </td>
                        <td>
                            <% @users.each do |user| %>
                                <%= user.email %><hr>
                            <% end %>
                        </td>
                        <td>
                            <% @users.each do |user| %>
                                <%= user.fullname %><hr>
                            <% end %>
                        </td>
                        <td>
                            <% @users.each do |user| %>
                                <%= link_to 'View', trader_profile_path(user.id), class: 'table-link-to-view-btn' %><hr>
                            <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
        <% end %>

    </div>

</main>

<%# Right %>

<div class="right">

    <%# Top %>

    <div class="top">
        <button id="menu-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"></path></svg>
        </button>
        <div class="theme-toggler">
            <svg class="sun active" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z"></path></svg>
            <svg class="moon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12 11.807A9.002 9.002 0 0 1 10.049 2a9.942 9.942 0 0 0-5.12 2.735c-3.905 3.905-3.905 10.237 0 14.142 3.906 3.906 10.237 3.905 14.143 0a9.946 9.946 0 0 0 2.735-5.119A9.003 9.003 0 0 1 12 11.807z"></path></svg>
        </div>
        <div class="profile">
            <div class="info">
                <p>Admin</p>
            </div>
            <div class="profile-photo">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z"></path></svg>
            </div>
        </div>
    </div>

    <%# Recent Transactions %>

    <div class="recent-transactions">
        <div class="updates">
            <h2>Recent Transactions</h2>
            <div class="update">
                <div class="profile-photo">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z"></path></svg>
                </div>
                <%# To be Continued %>
                <div class="message">
                    <p><b>Trader 01</b> Bought from company A</p>
                    <small class="text-muted">0 minutes ago</small>
                </div>
            </div>
            <div class="update">
                <div class="profile-photo">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" ><path d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z"></path></svg>
                </div>
                <%# To be Continued %>
                <div class="message">
                    <p><b>Trader 02</b> Bought from company A</p>
                    <small class="text-muted">0 minutes ago</small>
                </div>
            </div><div class="update">
                <div class="profile-photo">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z"></path></svg>
                </div>
                <%# To be Continued %>
                <div class="message">
                    <p><b>Trader 03</b> Bought from company A</p>
                    <small class="text-muted">0 minutes ago</small>
                </div>
            </div>

        </div>
    </div>

    <%# Search %>

    <div class="search">
        <h2>Search for Trader/s</h2>
        <div class="search-item">
            <div class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M10 18a7.952 7.952 0 0 0 4.897-1.688l4.396 4.396 1.414-1.414-4.396-4.396A7.952 7.952 0 0 0 18 10c0-4.411-3.589-8-8-8s-8 3.589-8 8 3.589 8 8 8zm0-14c3.309 0 6 2.691 6 6s-2.691 6-6 6-6-2.691-6-6 2.691-6 6-6z"></path></svg>
            </div>
            <div class="right">
                <div class="info">
                    <%# Search Input Field %>
                </div>
            </div>
        </div>
    </div>

</div>
