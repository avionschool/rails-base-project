<div class="actions">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: 'w-100 btn btn-lg btn-primary' %><br />
  <% end %>
</div>

<div class="actions mt-2">
 <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="sign-up-user"> Don't have an account?
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </p>
 <% end %>
 
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
   <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-pass' %><br />
  <% end %>
</div>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'w-100 btn btn-lg btn-primary' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'w-100 btn btn-lg btn-primary' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
