<%# Form SCSS  %>
<%= stylesheet_link_tag "/objects/_forms.scss" %>

<div class='container'>
<div class='form-container'>
  <h2>Login</h2>
  <div class='form'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => 'label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text-field', :placeholder => 'Username' %>
      </div>
      <div class="field">
        <%= f.label :password, :class => 'label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", :class => 'text-field', :placeholder => 'Password' %>
      </div>
        <% if devise_mapping.rememberable? %>
          <div class='checkbox'>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me%>
          </div>
        <% end %>
        <div class="actions form-btn">
          <%= f.submit "Login", :class => 'btn' %>
        </div>
      </div>
      <div class='link'>
      <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>