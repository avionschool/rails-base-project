<div class="col">
  <div class="text-center">
    <%= image_tag 'tradify-transparent', :class => "user_reg_img" %>
    <h2>Log in as Admin</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="form-outline mb-4">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form2Example1", class: "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", id: "form2Example1", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "form-label" %>
    </div>
    <% end %>
    </br>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-warning" %>
    </div>
  <% end %>
</div>


