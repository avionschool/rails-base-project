<!DOCTYPE html>
<html>
  <head>
    <title>Rails Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <% flash.each do |type, msg| %>
  <% if type == "notice" %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative text-center" role="alert" id="flash">
      <strong class="font-bold"><%= msg %></strong>            
    </div>
  <% else %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center" role="alert" id="flash">
      <strong class="font-bold"><%= msg %></strong>           
    </div>
  <% end %> 
<% end %>
    
    <%= yield %>
    
  </body>
</html>
