<section class="container-static">
  <section class="heading">
    <h1 class="admin-header-landing">ADMIN PANEL</h1>
    <h3 class="admin-subheader-landing">Control Panel Login</h3>
  </section>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'admin-login' %>
    </div>
  <% end %>
</section>
