<%= form_with model: food do |f| %>
  <% food.errors.full_messages_for(:user_username).each do |message| %>
    <%= message %>
  <% end %>

  <% food.errors.full_messages_for(:name).each do |message| %>
    <%= message %>
  <% end %>

  <% food.errors.full_messages_for(:food_group).each do |message| %>
    <%= message %>
  <% end %>

  <% food.errors.full_messages_for(:caption).each do |message| %>
    <%= message %>
  <% end %>

  <% food.errors.full_messages_for(:recipe_url).each do |message| %>
    <%= message %>
  <% end %>

  
  <div class="field">
    <%= f.text_field :user_username, autofocus: true, value:current_user.username, placeholder:"username" %>
  </div>
  
  <div class="field">
    <%= f.label :name, "Food Name" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :food_group, "Food Group" %><br />
    <%= f.text_field :food_group, autofocus: true, autocomplete: "food_group" %>
  </div>

  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_area :caption, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :recipe_url %><br />
    <%= f.text_field :recipe_url, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Post" %>
  </div>

<% end %>