<div class="index_portfolio">
    <div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">My Portfolio</a>
            </li>
            <li class="nav-item">
                <%=link_to "Records", transactions_portfolio_index_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
                <%=link_to "Pending Orders", pending_orders_portfolio_index_path, class: "nav-link"%>
            </li>   
        </ul>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Stocks</th>
                <th scope="col">Trade Type</th>
                <th scope="col">Last</th>
                <th scope="col">Bid Price</th>
                <th scope="col">Shares</th>
                <th scope="col">Total Cost</th>
                <th scope="col">Market Value</th>
                <th scope="col">Profit</th>
                <th scope="col">% Profit</th>
                </tr>
            </thead>
            <tbody>
                <%if fulfilled_orders.any?%>
                    <% fulfilled_orders.each do |f|%>
                    <tr>
                        <th scope="row"><%=f.stock.ticker%></th>
                        <td>Long</td>
                        <td><%=f.stock.last_price%></td>
                        <td><%=f.price%></td>
                        <td><%=f.quantity.to_i%></td>
                        <td><%=f.total%></td>
                        <td>101,000</td>
                        <td>21,000</td>
                        <td>21%</td>
                    </tr>
                    <%end%>
                <%end%>
            </tbody>
        </table>
    <div class="portfolio_available_cash">
        <label>Available Cash</label>
        <span>200,000</span>
    </div>        
    <a href="#" class="btn btn-primary">See more</a>
    </div>
    </div>
</div>
