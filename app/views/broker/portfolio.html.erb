<h1>Broker Portfolio</h1>
<% if @added_stocks.empty? %>
    <p>You do not have any stocks yet.</p>
<% else %>
    <table>
        <thead>
            <tr>
            <th>Ticker</th>
            <th>Name</th>
            <th colspan="3">Last Price</th>
            </tr>
        </thead>

        <tbody>
            <% @added_stocks.each do |stock| %>
            <tr>
                <td><%= stock.ticker %></td>
                <td><%= stock.name %></td>
                <td><%= stock.last_price %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>