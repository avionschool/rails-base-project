.main-container
  .image-container
    =image_tag ('Homepage.png'), class: "img-homepage", width: 840
 

  .trending-container
    .title-container
      %h1.trending-title="Trending Coins"
    .trending-header
      %h3.coin-name-label="Name"
      %h3.coin-symbol-label="Symbol"
      %h3.coin-rank-label="Rank"
    
    -@trending['coins'].each do |coin|
      .trending-coin-item
        %p.coin-name=coin['item']['name']
        %p.coin-symbol=coin['item']['symbol']
        %p.coin-rank=coin['item']['market_cap_rank']
    .sign-in-containers
      -if current_user
        .sign-out-btn=link_to "Sign out", destroy_user_session_path, method: :delete
      -else
        .sign-up-btn=link_to "Get Started", new_user_registration_path
        .sign-in-btn=link_to "Sign in", new_user_session_path


