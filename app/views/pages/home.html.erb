<%# Homepage CSS %>
<%= stylesheet_link_tag '/pages/homepage/main.scss' %>

<div class='container'>
  <%# Navigation Bar %>
  <header>
    <nav class='navbar'>
      <a class='nav-logo'>Investonks<span class='dot'></span></a>
      <ul class='nav-links'>
        <%# Login and SignIn %>
        <div>
          <ul>
            <% if user_signed_in?  %>
              <li><%= link_to "Edit Profile", edit_user_registration_path %> </li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %> </li>
              <li><%= link_to "Show stock", stocks_path %> </li>
              <li><%= link_to "Add stocks", new_stock_path %> </li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li> 
              <li>/</li>
              <li><%= link_to "Log In", new_user_session_path %></li>
            <% end %>
