<h1>Showing All Pending Accounts</h1>
<br>
<% if !@pending_brokers.empty? %>
<h4>Pending Broker Accounts</h4>
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
      <th>Broker ID</th>
      <th>Broker Name</th>
      <th>Broker Email</th>
      <th>Created At</th>
      <th>Action</th>
      </tr>
    </thead>
    <tbody class="text-white" style="font-size: 16px;">
      <% @pending_brokers.each do |broker| %>
      <tr>
        <td><%= broker.id %></td>
        <td><%= broker.broker_name %></td>
        <td><%= broker.email %></td>
        <td><%= broker.created_at %></td>
        <td><%= link_to "Confirm Account", confirm_broker_path(broker), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no unconfirmed broker accounts.</p>
<% end %>
<br>
<% if !@pending_buyers.empty? %>
<h4>Pending Buyer Accounts</h4>
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
      <th>Buyer ID</th>
      <th>Buyer Email</th>
      <th>Created At</th>
      <th>Action</th>
      </tr>
    </thead>
    <tbody class="text-white" style="font-size: 16px;">
      <% @pending_buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.id %></td>
        <td><%= buyer.email %></td>
        <td><%= buyer.created_at %></td>
        <td><%= link_to "Confirm Account", confirm_buyer_path(buyer), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no unconfirmed buyer accounts.</p>
<% end %>