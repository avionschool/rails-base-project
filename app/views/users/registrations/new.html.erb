<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
     
    <div class="flex justify-center h-auto items-center mt-10 mb-3">
    <div class='flex max-w-sm w-full h-150 p-10 justify-center bg-white  shadow-xl rounded-lg overflow-hidden mx-auto flex flex-col'>

    <h3 class="text-2xl font-bold mb-4">Sign Up</h3>
    <!-- This is the input component -->

    <div class=" h-12 input-component mb-5 p-3 text-right">
            <%= f.label :role_id,"Sign up as our : " ,class:"font-semibold"%> <br />
            <%= f.select :role_id, [["Buyer", 1], ["Broker", 2]]%>
    </div>
     
    <!-- This is the input component -->
    <div class="h-10 input-component mb-10 mt-5">
    <%= f.label :firstname,class: "px-1 transition-all bg-white font-semibold "%>
    <%= f.text_field :firstname,class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm"%>
    
    </div>

     <!-- This is the input component -->
    <div class="h-10 input-component mb-10">
    <%= f.label :lastname,class: "px-1 transition-all bg-white font-semibold"%>
    <%= f.text_field :lastname,class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm"%>
    
    </div>

    <!-- This is the input component -->
    <div class="h-10 input-component mb-10">
    <%= f.label :email, class:"px-1 transition-all bg-white font-semibold "%>
    <%= f.email_field :email, autocomplete: "email",class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm" %>

    </div>

     <!-- This is the input component -->
    <div class="h-10 input-component empty mb-5">
    <%= f.label :password, class: "px-1 transition-all bg-white font-semibold"%>
    <%= f.password_field :password, autocomplete: "new-password",class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm" %>
    
   
    </div>
    <div class="h-10 mt-2 input-component empty mb-10">
    <%= f.label :password_confirmation,class: "px-1 transition-all bg-white font-semibold" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm" %>
    
     <% if @minimum_password_length %>
    <em class="text-sm mx-auto">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>

    <br>
    <div class="mt-2 text-center">
    <%= f.submit "Sign up", class:"cursor-pointer bg-green-500 p-2 rounded text-gray-50" %>
    <br>
    <span>Already have an Account ?</span>
    <%= render "users/shared/links" %>
    
  </div>

    </div>
</div>

  
<% end %>






<style>
select{
  border: 1px solid black;
  padding : 5px;
  border-radius: 5px;
}
.empty input:not(:focus) + label {
  top: 50%;
  transform: translateY(-50%);
  font-size: 14px;
}
input:not(:focus) + label {
  color: rgba(70, 70, 70, 1);
}
input {
  border-width: 1px;
}
input:focus {
  outline: none;
  border-color: rgba(37, 99, 235, 1);
}
</style>
<script>
    document.getElementById('email').focus()
    const allInputs = document.querySelectorAll('input');
    for(const input of allInputs) {
        input.addEventListener('input', () => {
            const val = input.value
            if(!val) {
                input.parentElement.classList.add('empty')
            } else {
                input.parentElement.classList.remove('empty')
            }
        })
    }
</script>
