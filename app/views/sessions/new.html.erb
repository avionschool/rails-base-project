<h1>Login</h1>

<%= form_tag '/login' do %>
  <%= label_tag :username, "Username", class:"textLabel_user" %> <br>
  <%= text_field_tag :username, "", class:"textField_user", placeholder: 'Input Username' %> <br>

  <%= label :password, "Password", class:"textLabel_user" %> <br>
  <%= password_field_tag :password, "", class:"textField_user", placeholder: 'Input Password'  %> <br>

  <%= submit_tag "Login", :class => "login" %> 
<% end %>