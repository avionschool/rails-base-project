<%= form_with model: commentable.acomments.build do |f| %>
    <div class="field">
      <%= f.number_field :article_id, value: commentable.id %>
    </div>
  
    <div class="field">
      <%= f.text_area :body, placeholder:"Add a comment" %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>