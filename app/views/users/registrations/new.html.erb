<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <section class="container container-content mt-6 mr-6 ml-6">
<div class="columns">

<div class="column is-6 container-left">
  <%= image_tag("add-user-animate.svg", :alt => "rss feed") %>
</div>

<div class="column is-6 container-right">
  <%= render "users/shared/error_messages", resource: resource %>
<form class="new_user">
  <div class="field">
  <div class="control">
    <%= f.label :name, "Name", class:"label has-text-black" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "Name", class:"input" %>
  </div>
  </div>

  <div class="field">
  <div class="control">
    <%= f.label :email, class:"label has-text-black" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
  </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :role , class:"label has-text-black" %>
      <%= f.select :role_id, Role.where.not(id: Role.find_by_name('Admin').id).collect{|r|  [r.name, r.id]}, {include_blank: false}, class:"select is-multiple" %>
    </div>
  </div>

  <div class="field">
  <div class="control">
    <%= f.label :password, class:"label has-text-black" do %>
    Password
    <em class="has-text-weight-light has-text-black">(Minimum of 6 characters)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
  </div>
  </div>

  <div class="field">
  <div class="control">
    <%= f.label :password_confirmation, class:"label has-text-black" do %>
    Confirm Password
    <% end %>
    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
  </div>
  </div>

  <div class="actions">
    <%= f.button :submit, class: 'button start-now-two-inverted', value: 'Sign up' do%>
      Sign-up
    <% end %>
  </div>
</form>
</div>
</div>
  </section>
<% end %>

