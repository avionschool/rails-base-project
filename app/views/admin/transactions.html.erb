<section class="container mx-auto p-6 font-mono ">
  <h1 class="text-5xl text-pink-500 font-bold mb-1">Transaction History</h1>
  <div class="w-full overflow-hidden rounded-lg shadow-lg ">
    <div class="w-full overflow-x-auto ">
      <table class="w-full">
        <thead>
          <tr class="text-md font-semibold tracking-wide text-left text-gray-900 bg-gray-100 uppercase border-b border-gray-600">
            <th class="px-4 py-3">Ticker</th>
            <th class="px-4 py-3">Company Name</th>
            <th class="px-4 py-3">Stock Price</th>
            <th class="px-4 py-3">Quantity</th>
            <th class="px-4 py-3">Total Prize</th>
            <th class="px-4 py-3">Trader Name</th>
            <th class="px-4 py-3">Date of Sale/Buy</th>
            <th class="px-4 py-3">Transaction Type</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @transactions.each do |transaction| %>
            <tr class="text-gray-700">
             <td class="px-4 py-2 text-ms font-semibold border"><%= transaction.ticker %></td>
              <td class="px-4 py-2 text-ms font-semibold border"><%= transaction.company_name %></td>
              <td class="px-4 py-2 text-ms font-semibold border"><%= transaction.price %></td>
              <td class="px-4 py-2 text-sm border"><%= transaction.quantity %></td>
              <td class="px-4 py-2 text-sm border"><%= transaction.total_price %></td>
              <td class="px-4 py-2 text-sm border"><%= transaction.user.email %></td>
              <td class="px-4 py-2 text-sm border"><%= transaction.created_at.strftime("%A %b %e, %Y ") %></td>
              <td class="px-4 py-1 text-ms font-semibold border">
                <p class="p-2 text-<%= transaction.transaction_type == 1 ? "green-500" : "blue-500" %> text-xl font-bold text-center"> <%= transaction.transaction_type == 1 ? "SELL" : "BUY" %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
        <div class="digg_pagination cursor-pointer flex justify-center font-bold mb-2">
          <%= will_paginate @transactions, class: 'mb-3 text-xl' %>
        </div>
      </table>
    </div>
  </div>
</section>
