<div class='admintransactions-container'>
    <div class='admintransactions-body'>
        <div class='header'>
            <h1>All Transactions</h1>
        </div>
        <div class='transactions-table'>
            <% if @transactions.empty? %>
            <p>There are no transactions.</p>
            <% else %>
            <table>
                <thead>
                    <tr>
                    <th>Date Purchased</th>
                    <th>Ticker</th>
                    <th>Company</th>
                    <th>Broker</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total Cost</th>
                    </tr>
                </thead>
                <tbody>
                <% @transactions.each do |stock| %>
                    <tr>
                    <td><%= stock.created_at.to_formatted_s(:long) %></td>
                    <td><%= stock.ticker %></td>
                    <td><%= stock.company_name %></td>
                    <td><%= stock.broker_name %></td>
                    <td>$<%= stock.stock_price %></td>
                    <td><%= stock.quantity %></td>
                    <td>$<%= ((stock.quantity).to_i * (stock.stock_price).to_f).to_f %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
          
            <% end %>
        </div>
    </div>
</div>