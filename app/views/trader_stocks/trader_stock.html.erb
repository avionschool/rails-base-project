<section class="container mx-auto p-6 font-mono ">
  <div class="flex justify-between items-center">
    <h1 class="text-5xl text-pink-600 font-bold">My Stock</h1>
    <%= link_to edit_user_registration_path do %><i class="fas fa-user-edit bg-blue-700 hover:bg-blue-500 p-2 text-white cursor-pointer rounded"> <button>Edit Profile</button></i><% end %>
  </div>
  <div class="w-full overflow-hidden rounded-lg shadow-lg ">
    <div class="w-full overflow-x-auto ">
      <table class="w-full">
        <thead>
          <tr class="text-md font-semibold tracking-wide text-left text-gray-900 bg-gray-100 uppercase border-b border-gray-600">
            <th class="px-4 py-3">Ticker</th>
            <th class="px-4 py-3">Company</th>
            <th class="px-4 py-3">Stock Price</th>
            <th class="px-4 py-3">Quantity</th>
            <th class="px-4 py-3">Total Price</th>
            <th class="px-4 py-3">Action</th>
          </tr>
        </thead>
        <tbody class="bg-white ">
          <% @stocks.each do |stock| %>
            <% if stock.quantity > 0 %>
              <tr class="text-gray-700">
                <td class="px-4 py-3 text-ms font-semibold border"><%= stock.ticker %></td>
                <td class="px-4 py-3 text-ms font-semibold border"><%= stock.company_name %></td>
                <td class="px-4 py-3 text-ms font-semibold border"><%= stock.price %></td>
                <td class="px-4 py-3 text-ms font-semibold border"><%= stock.quantity.zero? ? "Out of Stocks" : stock.quantity %></td>
                <td class="px-4 py-3 text-ms font-semibold border"><%= stock.total_price %></td>
                <td class="px-4 py-1 text-ms font-semibold border">
                  <%= link_to sell_stock_path(stock.id, stock.ticker) do %><i class="fas fa-dollar-sign bg-green-700 hover:bg-green-500 p-2 text-white cursor-pointer rounded"> <button>Sell Stock</button></i><% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
        <div class="digg_pagination cursor-pointer flex justify-center font-bold mb-2 mt-2">
          <%= will_paginate @stocks, class: 'mb-3 text-xl' %>
        </div>
      </table>
    </div>
  </div>
</section>