<h1>Listing stocks Top 10 blue chip companies</h1>
<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Logo</th>
      <th>Current Price</th>
      <th>Company name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td>
          <%= stock.ticker %>
        </td>
        <td>
          <img src ="<%= stock.logo_url %>">
        </td>
        <td>
          <%= stock.current_price %>
        </td>
        <td>
          <%= stock.name %>
        </td>
        <td>
          <%= link_to 'Show', stock_path(:id => stock.id, :ticker => stock.ticker)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Stock', new_stock_path %>
