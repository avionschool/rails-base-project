<h1>Stock Market</h1>

<div class='search-area'>
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
    <% end %>
</div>
<% if @stock %>
  <div class="card card-header results-block">
    <strong>Symbol:</strong> <%= @stock.stock_symbol %>
    <strong>Company Name:</strong> <%= @stock.logo %>
    <strong>Price:</strong> <%= @stock.current_price %>
  </div>
<% end %>