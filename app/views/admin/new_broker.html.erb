<h1>Create a new Broker</h1>

<%= form_for @broker, :url => {:action => "new_broker"} do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :broker_name %>
    <%= f.text_field :broker_name %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>
<% end %>
