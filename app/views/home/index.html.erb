<% if user_signed_in? %>
  <h1>Hi user! welcome to the newsfeed of bouffage</h1>
  <%= link_to 'Log out', destroy_admin_session_path, method: :delete %>
  <%= render 'newsfeed' %>
  <%= link_to 'New Post', new_food_path %>
<% elsif nutritionist_signed_in? %>
  <h1>Hi nutritionist! welcome newsfeed of bouffage</h1>
  <%= link_to 'Log out', destroy_admin_session_path, method: :delete %>
  <%= render 'newsfeed' %>
  <%= link_to 'New Post', new_article_path %>
<% elsif admin_signed_in? %>
  <h1>Hi administrator these doctors are pending for approval</h1>
  <% @nut.each do |nutritionist| %>
    <ul>
      <li><%= nutritionist.username %></li>
      <li><%= nutritionist.email %></li>
      <li><%= nutritionist.license_num %></li>
      <li><%= nutritionist.years_exp %></li>
      <li><%= link_to "Approve", approve_path(nutritionist), method: :get %>
    </ul>
  <% end %>
  <%= link_to 'Log out', destroy_admin_session_path, method: :delete %>
<% else %>
  <h1>Welcome to bouffage please sign up or sign in!</h1>
  <%= link_to 'User Sign Up', new_user_registration_path %>
  <%= link_to 'User Sign In', new_user_session_path %><br>
  <%= link_to 'Doctor Sign Up', new_nutritionist_registration_path %>
  <%= link_to 'Doctor Sign In', new_nutritionist_session_path %><br>
  <%= link_to 'Admin Sign Up', new_admin_registration_path %>
  <%= link_to 'Admin Sign In', new_admin_session_path %><br>
<% end %>
