<%= render "devise/shared/error_messages", resource: resource %>
<div class='d-flex flex-column justify-content-between align-items-center mb-4'>
  <div class='col-md-8 col-11 mt-4 mb-5'>
    <div class='card' id='login'>
      <div class="card-body shadow-lg rounded px-5 py-5">
        <%# <p class='mb-3 text-muted'>Welcome!</p> %>
        <h1 class='card-title mb-3'>Sign up <i class="bi bi-person-plus"></i></h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100 mb-3 form-control' %>
          </div>

          <%# should be dropdown %>
          <div class="field form-group">
            <%= f.label :role_id, "I wanna be a " %><br />
            <%= f.select(:role_id, options_for_select([['buyer', 2],['broker',3]]), {}, {class: 'w-100 mb-3 form-control'}) %>
          </div>

          <div class="field form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, class: 'w-100 mb-3 form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class: 'w-100 mb-3 form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class: 'w-100 mb-3 form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'w-100 mb-3 form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-100 mb-3 form-control' %>
          </div>

          <div class="actions d-flex justify-content-between">
            <%= f.submit "Sign up as Buyer", class: 'btn btn-success mb-4 shadow rounded mt-3' %>
            <%= f.submit "Sign up", class: 'btn btn-primary mb-4 shadow rounded mt-3' %>
          </div>
        <% end %>
        
        <p class='mb-0 text-muted'>Already have an account? Go to <%= link_to "Login Page", new_user_session_path %>.</p>

     </div>
    </div>
  </div>
</div>
