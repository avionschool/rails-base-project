<section class="signup_page">
  <%=render 'shared/nav_signup'%>
  <div class="form_signup">
    <h3>Bwinance Account Login</h3>
    <span>Welcome back! Login with your Email or Username</span>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :login, class:"sign_up_label" %><br />
        <%= f.text_field :login, autofocus: true, class: "sign_up_input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class:"sign_up_label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "sign_up_input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group action">
        <%= f.submit "Log In", class: "btn btn-primary signup_btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>
<%=render 'shared/footer'%>
